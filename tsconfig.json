{
  "compilerOptions": {
    "experimentalDecorators": true,
    "baseUrl": ".",
    "lib": [
      "es2016"
    ],
    "paths": {
      "*": [
        "./src"
      ]
    },
    "allowJs": true,
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "outDir": "./lib"
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules", "./src/**/*_spec.ts"
  ]
}